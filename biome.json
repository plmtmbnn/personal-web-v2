{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useConst": "warn",
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"useJsxKeyInIterable": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noStaticElementInteractions": "off",
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"app/**/*.tsx",
			"app/**/*.css",
			"app/**/*.json",
			"postcss.config.mjs",
			"package.json",
			"biome.json",
			"next.config.ts",
			"components",
			"lib"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	}
}
